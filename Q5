ORG 0000H

MOV 40H, #11H
MOV 41H, #0FFH
MOV 42H, #22H
MOV 43H, #33H
MOV 44H, #0FFH
MOV 45H, #44H
MOV 46H, #55H
MOV 47H, #0FFH
MOV 48H, #66H
MOV 49H, #77H
MOV 4AH, #0FFH
MOV 4BH, #88H
MOV 4CH, #99H
MOV 4DH, #0FFH
MOV 4EH, #0AAH
MOV 4FH, #0BBH

MOV 50H, #0FFH
MOV 51H, #12H
ORG 0000H

MOV R0, #40H
MOV R1, #40H
MOV R2, #20H

SCAN:
MOV A, @R0
CJNE A, #0FFH, VALID
SJMP NEXT

VALID:
MOV @R1, A
INC R1

NEXT:
INC R0
DJNZ R2, SCAN

MOV A, R1
MOV R0, A

END
